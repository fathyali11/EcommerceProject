@model CreateProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">"Create"</h1>
<partial name="_Notefications" />
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <input asp-for="@Model.product.Id" type="hidden" class="form-control" />
                <span asp-validation-for="@Model.product.Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="@Model.product.ImageName" type="hidden" class="form-control" />
                <span asp-validation-for="@Model.product.ImageName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.Name" class="control-label"></label>
                <input asp-for="@Model.product.Name" class="form-control" />
                <span asp-validation-for="@Model.product.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.Description" class="control-label"></label>
                <textarea asp-for="@Model.product.Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="@Model.product.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.Author" class="control-label"></label>
                <input asp-for="@Model.product.Author" class="form-control" />
                <span asp-validation-for="@Model.product.Author" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.ListPrice" class="control-label"></label>
                <input asp-for="@Model.product.ListPrice" class="form-control" placeholder="Enter List Price" />
                <span asp-validation-for="@Model.product.ListPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.Price" class="control-label"></label>
                <input asp-for="@Model.product.Price" class="form-control" />
                <span asp-validation-for="@Model.product.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.Price50" class="control-label"></label>
                <input asp-for="@Model.product.Price50" class="form-control" />
                <span asp-validation-for="@Model.product.Price50" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.Price100" class="control-label"></label>
                <input asp-for="@Model.product.Price100" class="form-control" />
                <span asp-validation-for="@Model.product.Price100" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.product.CategoryId" class="control-label"></label>
                <select asp-for="@Model.product.CategoryId" asp-items="Model.categoriesSelectedList" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="@Model.product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ImageFile" class="form-label mt-4">Image</label>
                <div class="input-group">
                    <input class="form-control" type="file" id="imageFile" name="ImageFile" onchange="previewImage(event)">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" onclick="clearPreview()">Clear</button>
                    </div>
                </div>
                <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div id="imagePreview" class="mt-4 text-center">
            @{
                if(Model.product.ImageName is not null)
                {
                    <img src="@Url.Content($"~/{FileSettings.ImagePath}/{Model.product.ImageName}")" alt="@Model.product.Name" style="width: 600px; height: auto;" />
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/displaingimage.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}
