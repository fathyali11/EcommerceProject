@model IEnumerable<WebStore.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Street Address
            </th>
            <th>
                City
            </th>
            <th>
                state
            </th>
            <th>
                PostalCode
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.StreetAddress
            </td>
            <td>
                @item.City
            </td>
            <td>
                @item.state
            </td>
            <td>
                @item.PostalCode
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                <div>
                     <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">
                         <i class="bi bi-pencil"></i>
                         Edit
                     </a>
                     <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                         <i class="bi bi-trash3"></i>
                         Delete
                     </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
